
<%= form_with(model: example) do |form| %>
  <% if example.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(example.errors.count, "error") %> prohibited this example from being saved:</h2>

      <ul>
        <% example.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row my-5">
    <div class="col">
      <div class="card card text-dark bg-light mb-3 w-100">
        <div class="card-header">Original</div>
        <div class="card-body">
          <%= example.original %>
        </div>
      </div>
    </div>

    <div class="col">
      <div class="card card text-dark bg-light mb-3 w-100">
        <div class="card-header">Tradução</div>
        <div class="card-body">
          <%= example.translation %>
        </div>
      </div>
    </div>
  </div>

  <div class="row my-5 justify-content-center">
    <div class="col-2">
      <%= form.radio_button :approved, 'Reprovado', class: 'btn-check' %>
      <%= form.label :approved, 'Reprovado', for: 'example_approved_reprovado', class: 'btn btn-outline-secondary w-100' %>
    </div>
    <div class="col-2">
      <%= form.radio_button :approved, 'Aprovado', class: 'btn-check' %>
      <%= form.label :approved, 'Aprovado', for: 'example_approved_aprovado', class: 'btn btn-outline-primary w-100' %>
    </div>
  </div>
  </div>

  <div class="row my-5 justify-content-center">
    <div class="col-2">
      <%= form.submit "Submeter avaliação", class: "btn btn-primary btn-large" %>
    </div>
  </div>
<% end %>
