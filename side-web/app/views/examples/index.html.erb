<%= render 'shared/notice' %>
<%= render partial: 'shared/header', locals: { title: "Traduçoes" } %>

<div id="pending_examples">
  <h4>Pendentes</h4>
  <div class="list-group my-3">
    <% @pending_examples.each do |example| %>
      <%= render example %>
    <% end %>
  </div>

  <%= render partial: 'shared/empty_state',
             locals: {
               show: @pending_examples.empty?,
               title: "Não ha traduções pendentes",
               description: "Quando houver, elas aparecerão aqui.",
             } %>

</div>

<div class="row my-5 justify-content-center">
  <div class="col-6">
    <hr>
  </div>
</div>

<div id="reviewed_examples">
  <h4>Revisadas</h4>
  <div class="list-group my-3">
    <% @reviewed_examples.each do |example| %>
      <%= render example %>
    <% end %>
  </div>

  <%= render partial: 'shared/empty_state',
             locals: {
               show: @reviewed_examples.empty?,
               title: "Não ha traduções revisadas",
               description: "Quando houver, elas aparecerão aqui.",
             } %>
</div>
