<%= form.label :target_columens, t('Target Columns'), class: 'form-label' %>

<table class="table table-bordered">
  <thead>
  <tr class="table-dark">
    <th scope="col">Lines</th>
    <% @user_file.first_line.split(",").each_with_index do |column, index| %>
      <th scope="col">
        <%= form.check_box :target_column[index], { multiple: true, checked: false }, index, class: 'form-check-input' %>
        <%= form.label :target_columns, "#{column} [#{index}]", class: 'form-check-label' %>
        </div>
      </th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% @user_file.second_to_n_line(3).each_with_index do |column, index| %>
    <tr>
      <th scope="row"><%= index %></th>
      <% column.split(",").each do |value| %>
        <td><%= truncate(value) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>